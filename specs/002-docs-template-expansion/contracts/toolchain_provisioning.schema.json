{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://riso.dev/schemas/toolchain-provisioning-attempt.json",
  "title": "ToolchainProvisioningAttempt",
  "type": "object",
  "required": [
    "tool_name",
    "version_requested",
    "status",
    "timestamp"
  ],
  "additionalProperties": false,
  "properties": {
    "tool_name": {
      "type": "string",
      "enum": ["node", "pnpm", "uv"]
    },
    "version_requested": {
      "type": "string",
      "pattern": "^[0-9]+(\.[0-9]+)*$"
    },
    "status": {
      "type": "string",
      "enum": ["installed", "already_present", "failed"]
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "stderr": {
      "type": "string"
    },
    "next_steps": {
      "type": "string"
    },
    "retry_command": {
      "type": "string"
    }
  }
}
