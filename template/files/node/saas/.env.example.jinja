{% if saas_starter_module == "enabled" %}
# {{ project_name }} - Environment Variables
# 
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to version control!

# Node Environment
NODE_ENV=development

# Database
# Get your connection string from {% if saas_database == "neon" %}https://neon.tech{% elif saas_database == "supabase" %}https://supabase.com{% endif %}
DATABASE_URL="postgresql://user:password@host:5432/database"

{% if saas_auth == "clerk" %}
# Clerk Authentication
# Get your keys from https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_..."
CLERK_SECRET_KEY="sk_test_..."
CLERK_WEBHOOK_SECRET="whsec_..." # Optional: for webhook signature verification

# Clerk URLs (customize if needed)
NEXT_PUBLIC_CLERK_SIGN_IN_URL="/sign-in"
NEXT_PUBLIC_CLERK_SIGN_UP_URL="/sign-up"
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL="/dashboard"
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL="/dashboard"
{% elif saas_auth == "authjs" %}
# Auth.js / NextAuth.js
# Generate secret with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-here-min-32-chars"
NEXTAUTH_URL="http://localhost:3000"

# OAuth Providers (configure the ones you need)
# Google OAuth: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# GitHub OAuth: https://github.com/settings/developers
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"
{% endif %}

{% if saas_enterprise_bridge == "workos" %}
# WorkOS Enterprise SSO/SCIM
# Get your keys from https://dashboard.workos.com
WORKOS_API_KEY="sk_..."
WORKOS_CLIENT_ID="client_..."
WORKOS_WEBHOOK_SECRET="wh_..." # Optional: for webhook signature verification
{% endif %}

{% if saas_billing == "stripe" %}
# Stripe Billing
# Get your keys from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..." # From https://dashboard.stripe.com/webhooks
{% elif saas_billing == "paddle" %}
# Paddle Billing
# Get your keys from https://vendors.paddle.com/authentication
PADDLE_API_KEY="your-paddle-api-key"
PADDLE_WEBHOOK_SECRET="your-webhook-secret"
PADDLE_VENDOR_ID="your-vendor-id"
{% endif %}

{% if saas_jobs == "triggerdev" %}
# Trigger.dev Background Jobs
# Get your API key from https://cloud.trigger.dev
TRIGGER_API_KEY="tr_dev_..."
TRIGGER_API_URL="https://api.trigger.dev" # Optional: defaults to https://api.trigger.dev
{% elif saas_jobs == "inngest" %}
# Inngest Background Jobs
# Get your keys from https://app.inngest.com
INNGEST_SIGNING_KEY="signkey-..."
INNGEST_EVENT_KEY="..."
{% endif %}

{% if saas_email == "resend" %}
# Resend Email
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY="re_..."
{% elif saas_email == "postmark" %}
# Postmark Email
# Get your server token from https://account.postmarkapp.com/servers
POSTMARK_API_KEY="your-server-token"
{% endif %}

{% if saas_analytics == "posthog" %}
# PostHog Analytics
# Get your project API key from https://app.posthog.com/project/settings
NEXT_PUBLIC_POSTHOG_KEY="phc_..."
NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"
{% elif saas_analytics == "amplitude" %}
# Amplitude Analytics
# Get your API key from https://analytics.amplitude.com/settings/projects
NEXT_PUBLIC_AMPLITUDE_API_KEY="..."
{% endif %}

{% if saas_ai == "openai" %}
# OpenAI
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-..."
OPENAI_ORG_ID="org-..." # Optional: if you have multiple organizations
{% elif saas_ai == "anthropic" %}
# Anthropic Claude
# Get your API key from https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY="sk-ant-..."
{% endif %}

{% if saas_storage == "r2" %}
# Cloudflare R2 Storage
# Create an API token at https://dash.cloudflare.com/?to=/:account/r2/api-tokens
R2_ACCOUNT_ID="your-account-id"
R2_ACCESS_KEY_ID="..."
R2_SECRET_ACCESS_KEY="..."
R2_BUCKET_NAME="your-bucket-name"
{% elif saas_storage == "supabase-storage" %}
# Supabase Storage
# This uses your Supabase credentials below
{% endif %}

{% if saas_database == "supabase" or saas_storage == "supabase-storage" %}
# Supabase
# Get your keys from https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key" # For server-side operations
{% endif %}

{% if saas_observability_sentry %}
# Sentry Error Tracking
# Get your DSN from https://sentry.io/settings/projects/
SENTRY_DSN="https://...@sentry.io/..."
NEXT_PUBLIC_SENTRY_DSN="https://...@sentry.io/..." # Same as above for client-side
SENTRY_AUTH_TOKEN="..." # Optional: for source maps upload
{% endif %}

{% if saas_observability_datadog %}
# Datadog APM
# Get your API key from https://app.datadoghq.com/organization-settings/api-keys
DD_API_KEY="..."
DD_SITE="datadoghq.com" # or datadoghq.eu, us3.datadoghq.com, etc.
DD_SERVICE="{{ project_slug }}"
DD_ENV="development"
{% endif %}

# Application Configuration
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Optional: Skip environment validation during build (useful for Docker builds)
# SKIP_ENV_VALIDATION=true
{% endif %}
