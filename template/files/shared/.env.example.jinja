# Riso Template Environment Configuration
# Copy this file to .env and customize values for your environment

{%- if api_tracks | lower in ["python", "python+node"] %}

# FastAPI Configuration
# Host to bind the server to (0.0.0.0 for all interfaces, 127.0.0.1 for localhost only)
RISO_API_HOST=0.0.0.0

# Port for the API server
RISO_API_PORT=8000

# Enable auto-reload for development (should be false in production)
RISO_API_RELOAD=true

# CORS allowed origins (JSON array format)
# Development: Allow localhost origins
# Production: Specify exact domains, avoid wildcards
RISO_API_CORS_ORIGINS=["http://localhost:3000"]

# Application name shown in documentation
RISO_API_APP_NAME={{ project_name }}

# Application version (semver format)
RISO_API_VERSION=0.1.0

# Logging level (DEBUG, INFO, WARNING, ERROR)
# Development: DEBUG or INFO
# Production: WARNING or ERROR
RISO_API_LOG_LEVEL=INFO

# Deployment environment (development, staging, production)
# Affects configuration validation and security settings
RISO_API_ENVIRONMENT=development
{%- endif %}

{%- if include_databases | lower == "yes" %}

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/{{ project_slug }}
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME={{ project_slug }}
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
{%- endif %}

