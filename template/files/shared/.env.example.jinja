# Environment variables for Docker Compose
# Copy this file to .env and update with your actual values
# 
# ⚠️  SECURITY WARNING ⚠️
# Never commit .env files with real credentials to version control!
# The .env file is gitignored by default.

# =============================================================================
# Database Configuration (PostgreSQL)
# =============================================================================
{%- if include_databases == "yes" and (api_tracks | lower in ["python", "node", "python+node"]) %}
POSTGRES_USER=riso
POSTGRES_PASSWORD=CHANGE_IN_PRODUCTION
POSTGRES_DB=riso_db
POSTGRES_PORT=5432

# =============================================================================
# Cache Configuration (Redis)
# =============================================================================
REDIS_PASSWORD=CHANGE_IN_PRODUCTION
REDIS_PORT=6379
{%- else %}
# Database services not enabled in this configuration.
# To enable databases, regenerate with include_databases=yes
{%- endif %}

# =============================================================================
# Application Configuration
# =============================================================================
{%- if api_tracks | lower in ["python", "python+node"] %}
# Python API configuration
PYTHON_API_PORT=8000
{%- endif %}

{%- if api_tracks | lower in ["node", "python+node"] %}
# Node.js API configuration
NODE_API_PORT=3000
NODE_ENV=production
{%- endif %}

{%- if docs_site == "fumadocs" %}
# Documentation site configuration
DOCS_PORT=3001
{%- endif %}

# =============================================================================
# Development vs Production
# =============================================================================
# Set to 'development' for hot reload with volume mounts
# Set to 'production' for optimized builds
COMPOSE_ENV=production

# =============================================================================
# CI Testing Mode
# =============================================================================
# Set to 'true' when running in CI/CD environments (GitHub Actions)
# Disables volume mounts, uses BuildKit cache, reduces healthcheck intervals
RISO_CI_MODE=false
