# {{ project_name }} - Environment Configuration
# Copy this file to .env and update values as needed

# Application Settings
APP_NAME={{ project_name }}
VERSION=0.1.0

{%- if api_tracks | lower in ["python", "python+node"] %}

# API Configuration (Python FastAPI)
HOST=0.0.0.0
PORT=8000
RELOAD=true
ENVIRONMENT=development

# CORS Configuration
# Comma-separated list of allowed origins
# Development default allows localhost:3000
# Production: Use specific domains, never use wildcard "*"
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# Logging Configuration
LOG_LEVEL=INFO
{%- endif %}

{%- if api_tracks | lower in ["node", "python+node"] %}

# API Configuration (Node Fastify)
NODE_API_HOST=0.0.0.0
NODE_API_PORT=3001
NODE_ENV=development
{%- endif %}

{%- if include_databases == "yes" %}

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/{{ project_slug }}
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB={{ project_slug }}

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
{%- endif %}

# Security (for production)
# Generate secure random strings for production:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
# SECRET_KEY=your-secret-key-here
# JWT_SECRET=your-jwt-secret-here

# External Services (uncomment when needed)
# SENTRY_DSN=https://your-sentry-dsn
# STRIPE_API_KEY=your-stripe-key
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
