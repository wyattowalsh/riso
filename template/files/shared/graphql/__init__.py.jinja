import tomli
from pathlib import Path
from typing import Any, Dict


def load_graphql_config() -> Dict[str, Any]:
    """
    Load GraphQL configuration from config.toml.
    
    Returns:
        Configuration dictionary with GraphQL settings
    """
    config_path = Path(__file__).parent / "config.toml"
    
    if not config_path.exists():
        return {}
    
    with open(config_path, "rb") as f:
        config = tomli.load(f)
    
    return config.get("graphql", {})


__all__ = ["load_graphql_config"]
