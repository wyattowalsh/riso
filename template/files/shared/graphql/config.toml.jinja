# GraphQL API Configuration
# Override via environment variables with GRAPHQL_ prefix

[graphql]
# Server settings
endpoint = "/graphql"
playground_enabled = true

# Security limits
max_query_depth = 15           # Maximum nesting depth for queries
max_query_complexity = 5000    # Maximum complexity score for queries

# Pagination defaults
default_page_size = 20         # Default items per page
max_page_size = 100            # Maximum items per page

# DataLoader settings
dataloader_cache_enabled = true
dataloader_batch_size = 1000   # Maximum items in a single batch

# Subscription settings (WebSocket)
subscription_endpoint = "/graphql/ws"
subscription_keepalive_interval = 10  # Seconds between keepalive pings

# Error handling
sanitize_errors_in_production = true   # Hide stack traces in production
include_error_extensions = false       # Include detailed error extensions
