// components/VersionDropdown.tsx
import { useState } from 'react';
import { useRouter } from 'next/router';

interface Version {
  name: string;
  path: string;
  isLatest?: boolean;
}

const versions: Version[] = [
  { name: 'latest', path: '/', isLatest: true },
  // Add more versions as they are released
  // { name: 'v1.0', path: '/v1.0' },
];

export function VersionDropdown() {
  const router = useRouter();
  const [selectedVersion, setSelectedVersion] = useState('latest');

  const handleVersionChange = (version: Version) => {
    setSelectedVersion(version.name);
    router.push(version.path);
  };

  return (
    <div className="version-dropdown">
      <label htmlFor="version-select">Version:</label>
      <select
        id="version-select"
        value={selectedVersion}
        onChange={(e) => {
          const version = versions.find(v => v.name === e.target.value);
          if (version) handleVersionChange(version);
        }}
      >
        {versions.map((version) => (
          <option key={version.name} value={version.name}>
            {version.name} {version.isLatest ? '(latest)' : ''}
          </option>
        ))}
      </select>
    </div>
  );
}

