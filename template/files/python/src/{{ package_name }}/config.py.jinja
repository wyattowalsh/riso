"""Configuration models for the baseline project."""

from __future__ import annotations

from pydantic_settings import BaseSettings


class BaseAppSettings(BaseSettings):
    env_file = ".env"
    env_file_encoding = "utf-8"
    env_prefix = "RISO_"


class QuickstartSettings(BaseAppSettings):
    notebook_path: str = "notebooks/getting-started.ipynb"
    enable_notebooks: bool = True


settings = QuickstartSettings()
