[build-system]
requires = ["setuptools>=67", "wheel"]
build-backend = "setuptools.build_meta"

[project]
name = "{{ project_slug }}"
description = "Baseline Riso project scaffold generated via Copier."
version = "0.1.0"
readme = "README.md"
requires-python = ">=3.11"
license = { text = "MIT" }
authors = [{ name = "{{ author_name|default('Riso Maintainer', true) }}" }]
dependencies = [
  "loguru>=0.7.3",
  "pydantic>=2.12.3",
  "pydantic-settings>=2.11.0",
  "tenacity>=9.1.2",
]

[dependency-groups]
test = [
  "pytest>=8.4.2",
]
quality = [
  "ruff>=0.14.2",
  "mypy>=1.18.2",
  "pylint>=4.0.2",
  "coverage>=7.6.9",
  "taskipy>=1.13.0",
]
notebook = [
  "nbclient>=0.10.2",
  "jupyterlab>=4.4.10",
]
cli = [
  "click>=8.3.0",
  "markdown-it-py>=4.0.0",
  "mdurl>=0.1.2",
  "rich>=14.2.0",
  "shellingham>=1.5.4",
  "typer>=0.20.0",
]
api_python = [
  "fastapi>=0.120.2",
  "uvicorn[standard]>=0.38.0",
]
mcp = [
  "fastmcp>=2.13.0.2",
]

[tool.pytest.ini_options]
addopts = "-ra"
testpaths = ["tests"]

[tool.taskipy]
ignore_errors = false

[tool.taskipy.tasks]
quality = "python -m tasks.quality"
